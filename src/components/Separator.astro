---
const { resaltado="Resaltado", regular="Regular" } = Astro.props;
---
<section class="border-t-4 border-b-4 border-[#e20719]">
    <article class="py-8 px-2 text-center">
        <p class="text-2xl text-gray-600">
            <span class="text-[#e20719] font-bold">
                {resaltado}
            </span>
            {regular}
        </p>
    </article>
</section>