---
const { image, title="Título", description="Descripción" } = Astro.props;
---

<div class="rounded-xl shadow-[4px_4px_4px_2px_rgba(0,_0,_0,_0.2)] border border-gray-100 p-6 w-80 space-y-4">
    <img src={image} alt={title} class="max-h-16 h-16 mx-auto"/>
    <div class="text-center">
        <h2 class="text-2xl font-semibold text-[#e20719]">{title}</h2>
        <p class="text-gray-600 text-base mt-2">{description}</p>
    </div>
</div>